    else if (anim_counter &lt; 30)
    {
        image_index = 4
    }
    else if (anim_counter &lt; 33)
    {
        image_index = 5
    }
    else if (anim_counter &lt; 39)
    {
        image_index = 6
    }
    else if (anim_counter &lt; 42)
    {
        image_index = 7
    }
}
else if (state == 3)
{
    anim_counter ++
    if (anim_counter != 6)
    {
        if (anim_counter == anim_max)
        {
            state = 0
            image_index = 1
            sprite_index = oyster_closed_idle
            anim_counter = 0
            anim_max = 183
            exit
        }
        else if (anim_counter % 3 == 0)
        {
            image_index ++
        }
    }
    
}

